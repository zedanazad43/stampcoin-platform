# ============================================
# Frontend Configuration
# ============================================

# API URL
VITE_API_URL=http://localhost:3000

# Application Metadata
VITE_APP_NAME=Stampcoin Platform
VITE_APP_ID=stampcoin-dev
VITE_APP_VERSION=1.0.0-dev
VITE_APP_DESCRIPTION=Stamp Collection Platform

# OAuth URLs (for local development)
VITE_OAUTH_PORTAL_URL=http://localhost:3000
VITE_OAUTH_CALLBACK_URL=http://localhost:5173/auth/callback

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_STRIPE=false
VITE_ENABLE_AWS_S3=false
VITE_ENABLE_BLOCKCHAIN=false

# ============================================
# Backend Configuration
# ============================================

# Node Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# Frontend URLs
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ============================================
# Database Configuration
# ============================================

# MySQL
DATABASE_URL=mysql://stampcoin:stampcoin123@localhost:3306/stampcoin
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=stampcoin
MYSQL_USER=stampcoin
MYSQL_PASSWORD=stampcoin123
MYSQL_ROOT_PASSWORD=root

# PostgreSQL (if using)
# DATABASE_URL=postgresql://stampcoin:postgres123@localhost:5432/stampcoin
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=stampcoin
# POSTGRES_USER=stampcoin
# POSTGRES_PASSWORD=postgres123

# ============================================
# Cache & Session
# ============================================

# Redis
REDIS_URL=redis://:redis123@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# Session
SESSION_SECRET=your-session-secret-key-for-local-dev
SESSION_TIMEOUT=3600000  # 1 hour in ms

# ============================================
# Authentication & Security
# ============================================

# JWT
JWT_SECRET=your-jwt-secret-key-change-in-production-do-not-share
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRY=30d

# API Keys (for local testing)
API_KEY=dev-api-key-only-for-local-testing
API_SECRET=dev-api-secret-only-for-local-testing

